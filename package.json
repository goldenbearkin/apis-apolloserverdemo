{
  "name": "apis-apolloserverdemo",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "apollo-link": "^1.0.0",
    "apollo-server-express": "^1.2.0",
    "aws-sdk": "^2.141.0",
    "aws-serverless-express": "^3.0.2",
    "body-parser": "^1.18.2",
    "builder-pattern": "^1.0.1",
    "cancan": "https://github.com/Vincent-Pang/cancan.git#develop",
    "compression": "^1.7.1",
    "config": "^1.27.0",
    "core-js": "^2.5.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.6.1",
    "injection-js": "^2.1.0",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "merge-graphql-schemas": "^1.2.0",
    "moment": "^2.19.1",
    "pem": "^1.12.3",
    "result-class": "^1.3.1",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^2.1.1",
    "@types/body-parser": "^1.16.7",
    "@types/compression": "^0.0.34",
    "@types/config": "^0.0.33",
    "@types/cors": "^2.8.1",
    "@types/graphql": "^0.11.5",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.80",
    "@types/node": "6.0.90",
    "@types/pem": "^1.9.3",
    "@types/winston": "^2.3.7",
    "@types/zen-observable": "^0.5.3",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "scripts": {
    "start": "nodemon --watch src --exec ts-node ./src/index.local.ts",
    "build": "./build.sh",
    "deploy": "yarn build && ./deploy.sh $npm_package_name",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "collectCoverage": true,
    "mapCoverage": true,
    "coverageDirectory": "test_coverage_dir",
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "!src/global.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
